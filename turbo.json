{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "tsconfig.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["NODE_ENV", "DATABASE_URL", "REDIS_URL"],
      "outputs": ["dist/**", "build/**", ".next/**"]
    },
    "clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:migrate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:push": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:seed": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "cache": true,
      "dependsOn": ["^build"],
      "env": ["NODE_ENV", "DATABASE_URL", "REDIS_URL"],
      "outputs": ["coverage/**"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "env": ["NODE_ENV", "DATABASE_URL", "REDIS_URL"],
      "outputs": ["coverage/**", "coverage-final.json"]
    },
    "test:e2e": {
      "cache": false,
      "dependsOn": ["build"],
      "env": ["NODE_ENV", "DATABASE_URL", "REDIS_URL", "API_URL"]
    },
    "test:integration": {
      "cache": true,
      "dependsOn": ["^build"],
      "env": ["NODE_ENV", "DATABASE_URL", "REDIS_URL"],
      "outputs": ["coverage/**"]
    },
    "test:unit": {
      "cache": true,
      "env": ["NODE_ENV"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "env": ["NODE_ENV"],
      "persistent": true
    },
    "type-check": {
      "outputs": []
    }
  }
}
