# Simplified Environment Variables
# Copy to .env for development

# Core Services
PORT=3000
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/saas_dev
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# AI Providers (get from providers)
OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...  # Optional
# GOOGLE_VERTEX_PROJECT_ID=...  # Optional

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# File Storage (development uses local filesystem)
UPLOAD_DIR=./uploads

# Optional for production
# S3_BUCKET=your-bucket
# S3_REGION=us-east-1
# SENTRY_DSN=https://...
# CDN_URL=https://cdn.yourplatform.com