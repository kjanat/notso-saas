{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node.js TypeScript Config",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "sourceMap": true,
    "removeComments": true
  }
}
