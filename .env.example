# Core Services
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/saas_platform
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=7d

# AI Providers
OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# VOYAGE_API_KEY=pa-...
# GOOGLE_VERTEX_PROJECT_ID=your-project-id
# GOOGLE_VERTEX_LOCATION=us-central1

# Environment
NODE_ENV=development
PORT=3000
WEBSOCKET_PORT=3001
LOG_LEVEL=debug

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# File Storage
STORAGE_TYPE=local
UPLOAD_DIR=./uploads

# Production Only
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# CDN_URL=https://cdn.yourplatform.com

# Monitoring (Production)
# SENTRY_DSN=https://...@sentry.io/...
# OTEL_ENDPOINT=http://localhost:4317

# Queue Configuration
AI_QUEUE_KEY=bull:ai-processing:meta
# QUEUE_PREFIX=bull                    # Prefix for Redis queue keys (default: bull)
# AI_QUEUE_NAME=ai-processing          # Name of the AI processing queue (default: ai-processing)

# Seed Data Security
# ADMIN_PASSWORD=your-admin-password    # Admin password for database seeding
# DEMO_PASSWORD=your-demo-password      # Demo user password for database seeding

# Testing Configuration
VITEST_TIMEOUT=10000
VITEST_HOOK_TIMEOUT=10000